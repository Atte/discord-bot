{
    "include": ["src/**/*", "typings/**/*", "__tests__/**/*"],
    "typeAcquisition": { "include": ["jest"] },
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["ES2019"],
        "module": "ES2020",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "strict": true,
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types", "./typings"],
        "types": ["parcel-env"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "types": ["node"]
        }
    }
}
