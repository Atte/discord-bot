{
    "include": ["src/**/*", "typings/**/*", "__tests__/**/*", "pre-render.tsx"],
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["ES2019"],
        "module": "ES2020",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "strict": true,
        "sourceMap": true,
        "typeRoots": ["./node_modules/@types", "./typings"],
        "types": ["parcel-env"]
    },
    "typeAcquisition": { "include": ["jest"] }
}
