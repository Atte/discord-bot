{
    "include": ["src/**/*", "typings/**/*"],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "strict": true,
        "sourceMap": true,
        "typeRoots": ["./node_modules/types", "./typings"]
    }
}
