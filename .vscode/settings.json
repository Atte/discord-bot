{
    "files.exclude": {
        "**/.parcel-cache": true,
        "**/node_modules": true,
        "target": true,
        ".direnv": true
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "editor.formatOnSave": true
    },
    "[nix]": {
        "editor.defaultFormatter": "jnoortheen.nix-ide",
        "editor.formatOnSave": true
    },
    "nixEnvSelector.nixFile": "${workspaceRoot}/shell.nix",
    "rust-analyzer.cargo.features": [
        "berrytube",
        "cron",
        "teamup",
        "openai",
        "openai-functions",
        "openai-vision"
    ]
}
